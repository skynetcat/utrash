#!/usr/bin/env bash

# =========================================
# HELP
# =========================================
printHelp () {
  cat <<HELPPAGE
  Description:
    A simple trash script written in bash.

  Usage: utrash [OPTION]/[FILE(S)]

  Options:
    -h, --help
      Print this help page.

    -e, --empty
      Empty the trash.

    -r, --restore
      Select file(s) to restore to the original path.
    
    -rt, --restore-today
      Select file(s) deleted today to restore to 
      the original path.

    -ry, --restore-yesterday
      Select file(s) deleted yesterday to restore to 
      the original path.

    -l, --list
      List trash items.

    -lt, --list-today
      List items trashed today.

    -ly, --list-yesterday
      List items trashed yesterday.

    -c, --custom
      Used in combination with restore options to
      restore in a custom directory

  Examples:
    1. utrash hello
        Trashes 'hello' file

    2. utrash file1 file2 dir1
        Trashes file1, file2 and dir1

    3. utrash *
        Trashes all files in the current directory

    4. utrash -r 
        Select file(s) to recover using fzf
HELPPAGE
}

# =========================================
# VARIABLES
# =========================================
today="`date "+%d-%m-%Y"`"
yesterday="`date -d "-1 day" "+%d-%m-%Y"`"

# =========================================
# DIRECTORIES
# =========================================
TRASH_DIR="$HOME/.local/share/utrash"

checkDir () {
  if [[ ! -d "$1" ]]; then
    mkdir -p "$1"
  fi
}

checkDir "$TRASH_DIR"

# =========================================
# FUNCTIONS
# =========================================
empty () {
  read -rp "Are you sure you want to delete EVERYTHING in the trash? (y/N) " asked
  if [[ "$asked" == "y" ]]; then
    rm -rf "$TRASH_DIR"/*
    echo "Trash cleaned"
  else
    echo "Nothing in the trash was deleted"
  fi
}

# =========================================
# OPTIONS
# =========================================
case "$1" in
  "-h"|"--help") printHelp ;;
  "-e"|"--empty") empty ;;
  "-r"|"--restore") ;;
  "-rt"|"--restore-today") ;;
  "-ry"|"--restore-yesterday") ;;
  "-l"|"--list") ;;
  "-lt"|"--list-today") ;;
  "-ly"|"--list-yesterday") ;;
esac
